{
    "name": "Service",
    "plural": "Services",
    "base": "PersistedModel",
    "idInjection": true,
    "options": {
      "validateUpsert": true
    },
    "properties": {
      "serviceName": {
          "type": "string",
          "required": true
      },
      "devices": {
          "type": "array",
          "required": true
      },
      "consumptionSummary": {
          "type": "object",
          "required": true,
          "default": {}
      }
    },
    "validations": [],
    "relations": {
        "designatedMeter": {
            "type": "belongsTo",
            "model": "DesignatedMeter",
            "foreignKey": "designatedMeterId"
        }
    },
    "acls": [
      {
        "accessType": "*",
        "principalType": "ROLE",
        "principalId": "$unauthenticated",
        "permission": "DENY"
      },
      {
        "accessType": "*",
        "principalType": "ROLE",
        "principalId": "admin",
        "permission": "ALLOW"
      },
      {
        "accessType": "*",
        "principalType": "ROLE",
        "principalId": "$everyone",
        "permission": "ALLOW"
      },
      {
        "accessType": "*",
        "principalType": "ROLE",
        "principalId": "$owner",
        "permission": "ALLOW"
      }
    ],
    "methods": {}
  }
  