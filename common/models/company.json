{
  "name": "Company",
  "plural": "Companies",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "company_name": {
      "type": "string",
      "required": true
    },
    "legal_name": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string"
    },
    "size": {
      "type": "number"
    },
    "image": {
      "type": "string"
    },
    "status": {
      "type": "number",
      "required": true,
      "default": 1
    },
    "created_at": {
      "type": "date",
      "required": true
    },
    "updated_at": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "users": {
      "type": "hasMany",
      "model": "eUser",
      "foreignKey": "company_id"
    },
    "meters": {
      "type": "hasMany",
      "model": "DesignatedMeter",
      "foreignKey": "company_id"
    },
    "companyType": {
      "type": "belongsTo",
      "model": "CompanyType",
      "foreignKey": "type_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
